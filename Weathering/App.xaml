<Application
    x:Class="Weathering.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Weathering"
    xmlns:services="using:Weathering.Services"
    RequestedTheme="Light">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Style/Style.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <services:IconSelectorService x:Key="IconSelectorService" />
            <services:LocalizationService x:Key="LocalizationService" />
        </ResourceDictionary>
    </Application.Resources>

</Application>
